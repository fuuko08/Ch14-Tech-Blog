<div class="card">
    <h2 class="card-header">Edit Post</h2>

    <form class="card-body edit-form">

      <div class="form-group">
        <label class="form-label">Title:</label>
        <input type="text" class="form-input" name="post-title" value="{{post.title}}"/>
      </div>

      <div class="form-group">
        <label class="form-label">Content:</label>
        <textarea class="form-textarea form-input" name="post-content">{{post.content}}</textarea>
      </div>

      <div class="form-group">
        <button type="submit" class="btn btn-primary">Edit</button>
      </div>

      <input type="hidden" name="post-id" value="{{post.id}}"/>

    </form>

    <div class="card-body">
        <button type="submit" class="btn btn-primary" id="delete-btn">Delete</button>
    </div>
</div>
<script src="/public/js/edit.js"></script>