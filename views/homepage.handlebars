{{#each posts as |post|}}
    <div class="card">
        <div class="card-header flex-row justify-space-between">
            <h2>
                <a href="/post/{{id}}">
                    <div class="card-title col-8">{{post.title}}</div>
                </a>
            </h2>
            <h4 class="card-subtitle mb-2 text-muted col-3">posted by {{user.username}} on {{format_date create_at}}</h4>            
            <p class="card-text">{{post.content}}</p>
        </div>
    </div>
{{/each}}